
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@* El primer "Login" es el método y el segundo es el nombre del controlador *@
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div>
        <label>Correo</label><br />
        @Html.TextBox("correo")
    </div>

    <div>
        <label>Password</label><br />
        @Html.Password("password")
    </div>

    <br />
    <button type="submit">Ingresar</button>
}

@* Aquí se mostrará el mensaje si el usuario es incorrecto *@
@if (ViewBag.Error != null)
{
    <p style="color:red">
        @ViewBag.Error
    </p>
}